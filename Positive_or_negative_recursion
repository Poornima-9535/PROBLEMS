import java.util.*;
class POSORNEG{
        public static void main(String args[]){
             Scanner sc=new Scanner(System.in);
             int n,res=0;
             System.out.println("Enter the number");
             n=sc.nextInt();
             posorneg(n);

        }
        public static void  posorneg(int n){
            if(n>0)
            System.out.println(n+ "is positive");
            else
             System.out.println(n+ "is negative");

        }
    
   

}
